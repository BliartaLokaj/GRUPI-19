//Initial commit: create basic game and player structure
#include <iostream>
#include <string>

using namespace std;

// Author: Aurora
// Simple game project

class Player {
public:
    string name;
    int score;

    Player(string n) {
        name = n;
        score = 0;
    }

    void increaseScore() {
        score++;
    }
};

int main() {
    Player player1("Player 1");

    cout << "Game started by " << player1.name << endl;

    // simple game logic
    player1.increaseScore();

    cout << "Current score: " << player1.score << endl;

    return 0;
}
